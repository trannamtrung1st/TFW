@page
@model TFW.Framework.CQRSExamples.Pages.Product.IndexModel
@{
    ViewData["Title"] = "Product";
}

<div class="text-center">
    <h1 class="display-4">Product</h1>
</div>

<div class="container">
    <div class="row mb-1">
        <div class="col-12">
            <a asp-area="" asp-page="/Product/Create" class="btn btn-info float-right">
                Create
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <table class="table">
                <thead class="thead-light">
                    <tr class="d-table-row">
                        <th class="d-table-cell">Id</th>
                        <th class="d-table-cell">Name</th>
                        <th class="d-table-cell">Category Name</th>
                        <th class="d-table-cell">Unit Price</th>
                        <th class="d-table-cell">Actions</th>
                    </tr>
                </thead>
                <tbody class="">
                    @foreach (var item in Model.ProductList)
                    {
                        <tr class="d-table-row">
                            <td class="d-table-cell">@item.Id</td>
                            <td class="d-table-cell">@item.Name</td>
                            <td class="d-table-cell">@item.CategoryName</td>
                            <td class="d-table-cell">@item.UnitPrice</td>
                            <td class="d-table-cell">
                                <a asp-area="" asp-page="/Product/Update" asp-route-id="@item.Id" class="btn btn-light">
                                    Update
                                </a>
                                <a asp-area="" asp-page="/Product/Index" asp-page-handler="Delete"
                                   asp-route-id="@item.Id" class="btn btn-outline-danger">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>