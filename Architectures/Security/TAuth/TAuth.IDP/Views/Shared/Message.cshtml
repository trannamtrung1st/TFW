@model MessageViewModel

<div class="message-page">
    <div class="lead">
        <h1>Message</h1>
    </div>

    <div class="row">
        <div class="col-sm-6">
            @if (!ViewContext.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
            }

            @Model.Message
        </div>
    </div>
</div>
