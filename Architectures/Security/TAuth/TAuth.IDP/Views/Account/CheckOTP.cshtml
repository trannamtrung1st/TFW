@model CheckOTPViewModel

<div class="register-page">
    <div class="lead">
        <h1>Check OTP</h1>
    </div>

    <partial name="_ValidationSummary" />

    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    <h2>Input your OTP code</h2>
                </div>

                <div class="card-body">
                    <form method="post">
                        <fieldset>
                            <input type="hidden" asp-for="ReturnUrl" />
                            <input type="hidden" asp-for="RememberLogin" />
                            <div class="form-group">
                                <label asp-for="OTPCode"></label>
                                <input type="text" class="form-control" placeholder="Input your OTP here" asp-for="OTPCode" autocomplete="off">
                            </div>

                            <button class="btn btn-primary" name="button" value="submit">Submit</button>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>