@page
@model TAuth.ResourceClient.Pages.CreateModel
@{
    ViewData["Title"] = "Create Resource";
}

<div class="text-center">
    <h1 class="display-4">Create Resource</h1>
</div>

<div class="container">
    <form role="form" method="post">
        <div class="form-group">
            <label for="resource-name">Name</label>
            <input type="text" class="form-control" id="resource-name" asp-for="@Model.RequestModel.Name" />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
