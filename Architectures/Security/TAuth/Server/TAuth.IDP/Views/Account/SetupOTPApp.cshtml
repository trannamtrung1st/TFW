@model SetupOTPAppViewModel

<div class="register-page">
    <div class="lead">
        <h1>OTP App</h1>
    </div>

    <partial name="_ValidationSummary" />

    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    <h2>Setup your OTP App</h2>
                </div>

                <div class="card-body">
                    <form method="post" asp-action="SetupOTPApp">
                        <fieldset>
                            <input type="hidden" asp-for="ReturnUrl" />
                            <input type="hidden" asp-for="RememberLogin" />
                            <input type="hidden" asp-for="SecretKey" />
                            <div class="form-group">
                                <div class="text-center">
                                    <img src="@Model.QrCodeSetupImageUrl" />
                                </div>
                                <span class="text-info">You need to download an Authenticator app to scan QR code.</span>
                            </div>

                            <button class="btn btn-primary" name="button" value="submit">Complete setup</button>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>